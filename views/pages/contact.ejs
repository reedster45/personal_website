<%- include('../partials/header.ejs') %>

<div id="contact">
    <div class="container d-flex justify-content-center align-items-center contact-height">
        <div class="">
            <div class="d-flex flex-column input-col mt-4">
                <label for="name">NAME:</label>
                <input class="input px-2" name="Name" type="text">
            </div>
            <div class="d-flex flex-column input-col mt-4">
                <label for="email">EMAIL:</label>
                <input class="input px-2" name="email" type="email">
            </div>
            <div class="d-flex flex-column input-col mt-4">
                <label for="subject">SUBJECT:</label>
                <input class="input px-2" name="subject" type="text">
            </div>
            <div class="d-flex flex-column input-col mt-4">
                <label for="message">MESSAGE:</label>
                <textarea id="msg" class="input px-2" name="message" rows="6"></textarea>
            </div>
            <div class=" mt-4">
                <button id="send" class="d-flex ms-auto px-5 py-3" type="button">SEND</button>
            </div>
        </div>
    </div>
</div>

